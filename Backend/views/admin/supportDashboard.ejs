<%- layout("layouts/boilerplate") %>

<style>
  .admin-support-title {
    font-size: 2rem;
    font-weight: 800;
    color: #111827;
  }

  .ticket-card {
    background: #fff;
    border-radius: 18px;
    padding: 20px;
    margin-bottom: 18px;
    border: 1px solid #e5e7eb;
    box-shadow: 0 6px 20px rgba(0,0,0,0.08);
  }

  .ticket-card h4 {
    font-weight: 700;
  }

  .ticket-status {
    font-weight: 700;
    padding: 4px 10px;
    border-radius: 10px;
    font-size: 0.85rem;
  }

  .status-open { background: #fee2e2; color:#dc2626; }
  .status-pending { background: #fef3c7; color:#d97706; }
  .status-in-progress { background:#dbeafe; color:#1e40af; }
  .status-resolved { background: #dcfce7; color:#15803d; }
  .status-closed { background: #e5e7eb; color:#374151; }

  .view-btn {
    background:#111827;
    color:white;
    font-weight:600;
    border-radius:12px;
    padding:8px 14px;
    text-decoration:none;
  }

  .status-form select {
    padding: 6px 10px;
    border-radius: 8px;
    border: 1px solid #d1d5db;
    background: #f9fafb;
    font-weight: 600;
  }

  .status-update-btn {
    background: #2563eb;
    color: white;
    font-weight: 600;
    border-radius: 10px;
    padding: 6px 12px;
    border: none;
    margin-left: 8px;
  }
  .status-update-btn:hover {
    background: #1d4ed8;
  }

  .back-btn {
    background: #111827;
    color: white !important;
    padding: 10px 18px;
    font-size: 0.95rem;
    border-radius: 12px;
    font-weight: 700;
    transition: 0.25s ease;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
  }

  .back-btn:hover {
    background: #1f2937;
    color: white !important;
    transform: translateY(-2px);
  }

  .chat-type-badge {
    display:inline-block;
    padding:4px 10px;
    border-radius:999px;
    font-size:0.75rem;
    background:#eef2ff;
    color:#3730a3;
    font-weight:700;
  }
</style>

<h2 class="admin-support-title mb-4">
  <i class="fa-solid fa-headset me-2"></i>Support Tickets & Chats
</h2>

<% tickets.forEach(ticket => { %>
  <div class="ticket-card">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center">
      <h4>#<%= ticket._id %></h4>

      <span class="ticket-status 
        <%= ticket.status === 'open' ? 'status-open'
          : ticket.status === 'pending' ? 'status-pending'
          : ticket.status === 'in-progress' ? 'status-in-progress'
          : ticket.status === 'resolved' ? 'status-resolved'
          : 'status-closed' %>">
        <%= ticket.status.toUpperCase() %>
      </span>
    </div>

    <p class="mt-1">
      <span class="chat-type-badge">
        <%= ticket.chatType === 'ticket'
          ? 'Normal Ticket'
          : ('Direct ' + ticket.chatType.replace('-', ' ↔ ').toUpperCase()) %>
      </span>
    </p>

    <!-- Ticket Info -->
    <p>
      <b>Initiator:</b>
      <% if (ticket.user) { %>
        @<%= ticket.user.username %> (<%= ticket.user.email %>)
      <% } else { %>
        Unknown
      <% } %>
    </p>

    <% if (ticket.participants && ticket.participants.user && ticket.participants.other) { %>
      <p>
        <b>Participants:</b>
        @<%= ticket.participants.user.username %> (<%= ticket.participants.user.role %>)
        ↔
        @<%= ticket.participants.other.username %> (<%= ticket.participants.other.role %>)
      </p>
    <% } %>

    <p><b>Issue:</b> <%= ticket.issueType %></p>
    <p><b>Message:</b> <%= ticket.message %></p>

    <!-- STATUS UPDATE FORM -->
    <form action="/admin/support/<%= ticket._id %>/status" method="POST" class="d-flex align-items-center mt-3 status-form">

      <select name="status">
        <option value="open" <%= ticket.status === 'open' ? 'selected' : '' %>>Open</option>
        <option value="pending" <%= ticket.status === 'pending' ? 'selected' : '' %>>Pending</option>
        <option value="in-progress" <%= ticket.status === 'in-progress' ? 'selected' : '' %>>In Progress</option>
        <option value="resolved" <%= ticket.status === 'resolved' ? 'selected' : '' %>>Resolved</option>
        <option value="closed" <%= ticket.status === 'closed' ? 'selected' : '' %>>Closed</option>
      </select>

      <button class="status-update-btn" type="submit">
        Update
      </button>
    </form>

    <!-- View More -->
    <a href="/admin/support/<%= ticket._id %>" class="view-btn mt-3 d-inline-block">
      View Details →
    </a>

    <a href="/admin/support/<%= ticket._id %>/chat" class="view-btn mt-3 d-inline-block">
      Live Chat →
    </a>
  </div>
<% }) %>

<a href="/admin/dashboard" class="back-btn mb-3 d-inline-block">
  <i class="fa-solid fa-arrow-left me-1"></i> Back to Admin Dashboard
</a>
