<%- layout("layouts/boilerplate") %>

<!-- Flatpickr -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

<div class="lux-booking-wrapper">

  <!-- HEADER -->
  <div class="lux-header">
    <h2>
      <i class="fa-solid fa-calendar-check"></i>
      Book <span class="accent"><%= listing.title %></span>
    </h2>

    <p class="lux-location">
      <i class="fa-solid fa-location-dot"></i>
      <%= listing.location %>, <%= listing.country %>
    </p>

    <p class="lux-price">
      ₹<%= listing.price.toLocaleString("en-IN") %> <span>/night</span>
    </p>
  </div>

  <!-- BOOKING FORM CARD -->
  <div class="lux-card">
    <form id="bookingForm"
          action="/bookings/listings/<%= listing._id %>/premium-book"
          method="POST">

      <!-- DATE PICKERS -->
      <div class="lux-date-group">
        <div class="lux-input-block">
          <label>Check-in</label>
          <input type="text" id="startDate" name="startDate" placeholder="Choose date" required>
        </div>

        <div class="lux-input-block">
          <label>Check-out</label>
          <input type="text" id="endDate" name="endDate" placeholder="Choose date" required>
        </div>
      </div>

      <!-- GUESTS -->
      <div class="lux-input-block">
        <label>Guests</label>
        <input type="number" name="guests" min="1" value="1" required>
      </div>

      <!-- TOTAL PRICE -->
      <p class="lux-total">
        Total Price:
        <strong>₹<span id="totalPrice"><%= listing.price %></span></strong>
      </p>

      <!-- BUTTON -->
      <button class="lux-btn" type="submit">
        <i class="fa-solid fa-credit-card"></i>
        Confirm Booking
      </button>

    </form>
  </div>
</div>

<script>
const bookedDates = <%- JSON.stringify(bookedDates) %>;
const pricePerNight = Number("<%= listing.price %>");
const totalPriceElem = document.getElementById("totalPrice");

// Convert booked ranges to disabled dates
const disabledRanges = bookedDates.map(b => ({
  from: new Date(b.startDate),
  to: new Date(b.endDate)
}));

// START PICKER
const startPicker = flatpickr("#startDate", {
  dateFormat: "Y-m-d",
  disable: disabledRanges,
  minDate: "today",
  onChange(selected) {
    if (selected.length) {
      endPicker.set("minDate", selected[0].fp_incr(1));
      calculateTotal();
    }
  }
});

// END PICKER
const endPicker = flatpickr("#endDate", {
  dateFormat: "Y-m-d",
  disable: disabledRanges,
  minDate: "today",
  onChange: calculateTotal
});

// PRICE CALCULATION
function calculateTotal() {
  const s = startPicker.selectedDates[0];
  const e = endPicker.selectedDates[0];
  if (s && e && e > s) {
    const nights = Math.round((e - s) / (1000 * 60 * 60 * 24));
    totalPriceElem.textContent = (nights * pricePerNight).toLocaleString("en-IN");
  }
}
</script>

