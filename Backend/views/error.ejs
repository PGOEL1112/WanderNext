<%- layout("layouts/boilerplate") %>
<style>
.error-container{
  min-height:70vh;
  display:flex;
  align-items:center;
  justify-content:center;
  padding:24px;
  background:linear-gradient(
    180deg,
    #f8fafc 0%,
    #f1f5f9 100%
  );
}

.error-box{
  background:#ffffff;
  max-width:420px;
  width:100%;
  padding:36px 32px;
  border-radius:18px;
  text-align:center;
  border:1px solid #e2e8f0;
  box-shadow:0 12px 32px rgba(0,0,0,.08);
}

/* icon */
.error-icon{
  width:64px;
  height:64px;
  margin:0 auto 18px;
  border-radius:50%;
  background:#fff7ed;
  display:flex;
  align-items:center;
  justify-content:center;
  color:#f59e0b;
  font-size:26px;
  border:1px solid #fde68a;
}

/* title */
.error-box h2{
  font-size:1.4rem;
  font-weight:700;
  color:#0f172a;
  margin-bottom:10px;
}

/* message */
.error-box p{
  font-size:.95rem;
  color:#64748b;
  line-height:1.6;
  margin-bottom:26px;
}

/* back button */
.error-box .btn.back{
  display:inline-flex;
  align-items:center;
  gap:6px;
  padding:10px 18px;
  border-radius:10px;
  background:#ffb020;
  color:#111;
  font-weight:700;
  border:none;
  text-decoration:none;
  transition:.2s ease;
}

.error-box .btn.back:hover{
  opacity:.9;
  transform:translateY(-2px);
  box-shadow:0 8px 18px rgba(255,176,32,.25);
}

/* mobile */
@media (max-width:480px){
  .error-box{
    padding:28px 22px;
  }
}

</style>


<div class="error-container">
  <div class="error-box">
    <div class="error-icon">
      <i class="fa-solid fa-triangle-exclamation"></i>
    </div>
    <h2>Oops! Something went wrong</h2>
    <p><%= message || "An unexpected error occurred. Please try again later." %></p>
    <a href="/listings" class="btn back">‚Üê Back to Home</a>
  </div>
</div>
