<%- layout("layouts/boilerplate") %>

<style>
.invoices-wrapper {
  max-width: 900px;
  margin: 40px auto;
}

.invoice-card {
  background: rgba(255,255,255,0.85);
  backdrop-filter: blur(10px);
  padding: 25px;
  border-radius: 18px;
  box-shadow: 0 12px 30px rgba(0,0,0,0.12);
}

.table thead {
  background: #111827;
  color: white;
}

.download-btn {
  background: #fbbf24 !important;
  color: #111 !important;
  border-radius: 10px;
  font-weight: 600;
  padding: 6px 12px;
}
.download-btn:hover {
  background: #f59e0b !important;
}
</style>

<div class="invoices-wrapper">
  <div class="invoice-card">

    <h2 class="mb-3"><i class="fa-solid fa-file-invoice"></i> Your Invoices</h2>
    <p class="text-muted mb-4">Download invoices for your previous bookings.</p>

    <table class="table table-hover">
      <thead>
        <tr>
          <th>Property</th>
          <th>Date</th>
          <th>Total Paid</th>
          <th>Invoice</th>
        </tr>
      </thead>

      <tbody>
        <% invoices.forEach(b => { %>
          <tr>
            <td><%= b.listing.title %></td>
            <td><%= new Date(b.startDate).toDateString() %></td>
            <td>â‚¹<%= b.totalPrice %></td>
            <td>
              <a href="/bookings/<%= b._id %>/invoice" class="btn download-btn">
                <i class="fa-solid fa-download"></i> Download
              </a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

  </div>
</div>
