  margin: 0 auto 12px;
  box-shadow:0 8px 18px rgba(99,102,241,0.28);
}

.wn-title {
  font-size: 26px;
  font-weight: 700;
  color: #1f2937;
}

.wn-sub {
  color: #6b7280;
  font-size: 0.95rem;
}

/* ALERT */
.wn-alert {
  padding: 12px;
  border-radius: 10px;
  margin-bottom: 16px;
  font-weight: 600;
  font-size: 0.9rem;
}

.wn-alert-error {
  background: #fee2e2;
  color: #b91c1c;
}

.wn-alert-success {
  background: #dcfce7;
  color: #15803d;
}

/* ----------- FORM ----------- */
.wn-form {
  margin-top: 10px;
}

.wn-input-group label {
  font-weight: 600;
  color: #374151;
  margin-bottom: 6px;
  display: block;
}

.wn-input-wrap {
  position: relative;
}

.wn-pass-wrap input {
  padding-right: 50px !important; /* space for eye icon */
}

.wn-pass-wrap {
  position: relative !important;
  overflow: hidden !important; /* icon ab bahar nahi jayega */
}

/* Icons */
.wn-input-wrap i {
  position: absolute;
  left: 14px;
  top: 50%;
  transform: translateY(-50%);
  color: #6b7280;
  font-size: 15px;
}

/* ----------- FIXED PLACEHOLDER (DARKER) ----------- */
.wn-input-wrap input::placeholder,
.wn-input-wrap select option {
  color: #374151 !important;   /* darker placeholder */
}

/* INPUT FIELDS */
.wn-input-wrap input,
.wn-input-wrap select {
  width: 100%;
  height: 48px;
  padding-left: 42px;
  padding-right: 42px; /* space for eye icon */
  border-radius: 10px;
  border: 1px solid #d1d5db;
  background: #ffffffba;
  color: #374151;
  font-weight: 500;
  transition: 0.25s;
}

.wn-input-wrap input:focus,
.wn-input-wrap select:focus {
  border-color: #6366f1;
  box-shadow: 0 0 0 3px rgba(99,102,241,0.18);
}

/* ----------- FIXED PASSWORD ICON POSITION ----------- */
.wn-pass-wrap .toggle-password {
  position: absolute;
  right: 14px;
  top: 50%;
  transform: translateY(-50%);
  padding-left: 2.5rem ;
  width: 30px;           /* grey box width */
  height: 30px;          /* grey box height */

  background: rgba(0,0,0,0.08);
  border-radius: 6px;
  cursor: pointer;

  /* THIS CENTERS THE ICON PERFECTLY */
  display: flex;
  align-items: center;
  justify-content: center;
}


/* hover effect */
.wn-pass-wrap .toggle-password:hover {
  background: rgba(0,0,0,0.12);
  color: #4b5563;
}
/* ----------- BUTTONS ----------- */
.wn-btn {
  width: 100%;
  margin-top: 16px;
  height: 48px;
  border-radius: 10px;
  background: linear-gradient(135deg, #6366f1, #8b5cf6);
  border: none;
  color: #fff;
  font-size: 1rem;
  font-weight: 700;
  display:flex;
  align-items:center;
  justify-content:center;
  gap: 8px;
  box-shadow: 0 12px 26px rgba(99,102,241,0.25);
  transition: 0.25s;
}

.wn-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 16px 30px rgba(99,102,241,0.32);
}

/* ALT BUTTON */
.wn-alt-btn {
  margin-top: 14px;
  display:block;
  text-align:center;
  padding: 10px;
  border-radius: 10px;
  border: 1px solid rgba(99,102,241,0.25);
  background: rgba(255,255,255,0.55);
  color:#4b5563;
  font-weight:600;
  transition:0.25s;
  text-decoration:none;
}

.wn-alt-btn:hover {
  background:#fff;
  transform:translateY(-1px);
}
</style>
