  text-align: center;
  margin-bottom: 22px;
}

.wn-logo {
  width: 58px;
  height: 58px;
  border-radius: 14px;
  background: linear-gradient(135deg, #6366f1, #8b5cf6);
  display:flex;
  justify-content:center;
