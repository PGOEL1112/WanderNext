<%- layout("layouts/boilerplate") %>

<div class="wn-auth-page">
  <main class="wn-card">
    <header class="wn-card-head">
      <div class="wn-logo">
        <i class="fa-solid fa-user-plus"></i>
      </div>

      <h1 class="wn-title">Create Account</h1>
      <p class="wn-sub">Join the WanderNext community</p>
    </header>

    <% if (error && error.length) { %>
      <div class="wn-alert wn-alert-error">
        <% error.forEach(msg => { %><div><%= msg %></div><% }) %>
      </div>
    <% } %>

    <% if (success && success.length) { %>
      <div class="wn-alert wn-alert-success">
        <% success.forEach(msg => { %><div><%= msg %></div><% }) %>
      </div>
    <% } %>

    <form action="/register" method="POST" class="wn-form">

      <!-- Username -->
      <div class="wn-input-group">
        <label>Username</label>
        <div class="wn-input-wrap">
          <i class="fa-solid fa-user"></i>
          <input type="text" name="username" placeholder="Enter username" required />
        </div>
      </div>

      <!-- Email -->
      <div class="wn-input-group">
        <label>Email</label>
        <div class="wn-input-wrap">
          <i class="fa-solid fa-envelope"></i>
          <input type="email" name="email" placeholder="Enter email" required />
        </div>
      </div>

      <!-- Role (User Only) -->
      <div class="wn-input-group">
        <label>Register as</label>
        <div class="wn-input-wrap">
          <i class="fa-solid fa-users"></i>
          <select name="role" required>
            <option value="user" selected>Regular User</option>
          </select>
        </div>
      </div>

      <!-- Password -->
      <div class="wn-input-group">
        <label>Password</label>
        <div class="wn-input-wrap wn-pass-wrap">
          <i class="fa-solid fa-lock"></i>
          <input type="password" id="regpassword" name="password" placeholder="Enter password" required />
          <span class="toggle-password" onclick="toggleRegPassword()">
            <i class="fa-solid fa-eye"></i>
          </span>
        </div>
      </div>

      <!-- Submit -->
      <button class="wn-btn" type="submit">
        <i class="fa-solid fa-user-plus"></i>
        Create Account
      </button>

      <!-- Go to Login -->
      <a href="/login" class="wn-alt-btn">
        Already have an account? Login
      </a>
    </form>
  </main>
</div>

<script>
function toggleRegPassword() {
  const pass = document.getElementById("regpassword");
  const icon = document.querySelector(".toggle-password i");

  if (pass.type === "password") {
    pass.type = "text";
    icon.classList.replace("fa-eye", "fa-eye-slash");
  } else {
    pass.type = "password";
    icon.classList.replace("fa-eye-slash", "fa-eye");
  }
}
</script>

<style>
/* ----------- AUTH PAGE WRAPPER ----------- */
.wn-auth-page {
