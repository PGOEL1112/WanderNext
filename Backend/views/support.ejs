<%- layout("layouts/boilerplate") %>

<style>
.support-wrapper {
  max-width: 900px;
  margin: 40px auto;
}

/* HEADER */
.support-header {
  background: linear-gradient(135deg, #0f172a, #1e293b, #111827);
  padding: 40px 30px;
  color: white;
  border-radius: 24px;
  text-align: center;
  box-shadow: 0 18px 40px rgba(0,0,0,0.25);
}

.support-header h2 {
  font-size: 2rem;
  font-weight: 800;
}

.support-header p {
  opacity: 0.9;
  margin-top: 5px;
}

/* CONTACT CARDS */
.contact-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  gap: 20px;
  margin: 30px 0;
}

.support-card {
  background: #fff;
  padding: 25px;
  border-radius: 18px;
  border: 1px solid #e5e7eb;
  box-shadow: 0 12px 28px rgba(0,0,0,0.08);
  transition: 0.25s ease;
  text-align: center;
}

.support-card:hover {
  transform: translateY(-3px);
  box-shadow: 0 18px 34px rgba(0,0,0,0.12);
}

.support-card i {
  font-size: 2.3rem;
  margin-bottom: 12px;
  color: #f59e0b;
}

.support-card h4 {
  font-weight: 700;
  margin-bottom: 8px;
  color: #111827;
}

.support-card p {
  color: #6b7280;
}

/* FORM BOX */
.support-form-box {
  background: rgba(255,255,255,0.95);
  padding: 30px;
  border-radius: 22px;
  backdrop-filter: blur(14px);
  box-shadow: 0 16px 35px rgba(0,0,0,0.12);
  margin-top: 20px;
}

.support-form-box h4 {
  font-size: 1.4rem;
  font-weight: 800;
  margin-bottom: 20px;
}

/* BUTTON */
.submit-btn {
  background: #111827;
  color: white;
  font-weight: 700;
  padding: 12px;
  width: 100%;
  border-radius: 12px;
  margin-top: 12px;
}

.submit-btn:hover {
  background: #1f2937;
}
</style>


<div class="support-wrapper">

  <!-- HEADER -->
  <div class="support-header">
    <h2>ðŸ’¬ We're Here to Help, <%= currentUser.username %>!</h2>
    <p>Your satisfaction is our priority. Reach out anytime.</p>
  </div>

  <!-- CONTACT OPTIONS -->
  <div class="contact-grid">

    <div class="support-card">
      <i class="fa-solid fa-headset"></i>
      <h4>Live Chat</h4>
        <p>Chat with our support team instantly.</p>
          <% if (currentUser.role === "user") { %>
            <a href="/support/chat-with/admin" class="btn btn-warning mt-2">Chat with Admin</a>
            <a href="/support/chat-with/owner" class="btn btn-primary mt-2">Chat with Owner</a>
          <% } else if (currentUser.role === "owner") { %>
            <a href="/support/chat-with/admin" class="btn btn-danger mt-2">Chat with Admin</a>
            <a href="/support/owner-chats/users" class="btn btn-success mt-2">View User Chats</a>
          <% } else if (currentUser.role === "admin") { %>
            <a href="/support/admin-chats/users" class="btn btn-success mt-2">View User Chats</a>
            <a href="/support/admin-chats/owners" class="btn btn-info mt-2">View Owner Chats</a>
          <% } %>
    </div>

    <div class="support-card">
      <i class="fa-solid fa-envelope"></i>
      <h4>Email Support</h4>
      <p>We reply within 24 hours.</p>
      <p><b>support@wandernext.com</b></p>
    </div>

    <div class="support-card">
      <i class="fa-solid fa-phone"></i>
      <h4>Call Us</h4>
      <p>Monâ€“Sat | 10:00 AM â€“ 6:00 PM</p>
      <p><b>+91 98765 43210</b></p>
    </div>

  </div>

  <!-- SUPPORT REQUEST FORM -->
  <div class="support-form-box">
    <h4><i class="fa-solid fa-paper-plane me-2"></i>Submit a Support Ticket</h4>

    <form action="/support" method="POST">

      <label class="form-label">Your Email</label>
      <input type="email" class="form-control" value="<%= currentUser.email %>" readonly>

      <label class="form-label mt-3">Issue Type</label>
      <select name="issueType" class="form-control" required>
        <option value="">Select</option>
        <option>Booking Issue</option>
        <option>Payment Issue</option>
        <option>Profile Issue</option>
        <option>Listing Issue</option>
        <option>Other</option>
      </select>

      <label class="form-label mt-3">Message</label>
      <textarea name="message" class="form-control" rows="4" required></textarea>

      <button type="submit" class="submit-btn">
        <i class="fa-solid fa-paper-plane me-2"></i>Send Message
      </button>
    </form>
  </div>

</div>
