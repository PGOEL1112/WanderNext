<%- layout("./layouts/boilerplate") %>

<!-- ========================= PREMIUM HERO ========================= -->
<section class="hero-section">
  <div class="hero-gradient"></div>
  <div class="hero-inner container">
    <div class="hero-left">
      <h1>Find unforgettable stays — <span>made for explorers</span></h1>
      <p class="lead">Handpicked homes, cozy cabins, and beachside escapes. Search, book, and go — all from one place.</p>

      <form action="/listings" method="GET" class="hero-search" role="search" aria-label="Search listings">
        <input name="q" type="search" placeholder="Search city, property or keyword (e.g. Goa, villa)" />
        <input name="checkin" class="flatpickr" placeholder="Check-in" />
        <input name="checkout" class="flatpickr" placeholder="Check-out" />
        <button class="btn btn-primary">Search</button>
      </form>

      <div class="hero-stats">
        <div><strong>10k+</strong><small>Listings</small></div>
        <div><strong>7k+</strong><small>Hosts</small></div>
        <div><strong>500k+</strong><small>Bookings</small></div>
      </div>
    </div>

    <div class="hero-right" aria-hidden="true">
      <!-- Stacked preview cards -->
      <div class="preview-card card-1">
        <img src="https://images.unsplash.com/photo-1701421016474-09b19faa9f77?w=900&auto=format&fit=crop&q=60&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Mnx8NjAweDQ0MCUzRlNlYXNpZGUlMjBWaWxsYSUyMCVFMiU4MCVBMiUyMEdvYXxlbnwwfHwwfHx8MA%3D%3D" alt="Preview 1" />
        <div class="pc-label">Seaside Villa • Goa</div>
      </div>

      <div class="preview-card card-2">
        <img src="https://media.istockphoto.com/id/1393537665/photo/modern-townhouse-design.jpg?s=612x612&w=0&k=20&c=vgQesOXDRzz0UfOZxmUtE-rFe75YgA9GvkKS8eeeumE=" alt="Preview 2" />
        <div class="pc-label">Alpine Cabin • Manali</div>
      </div>

      <div class="preview-card card-3">
        <img src="https://media.istockphoto.com/id/2176037736/photo/architectural-night-scenery-of-jiaxiu-building-in-guiyang-guizhou-china.jpg?s=612x612&w=0&k=20&c=ilaEVSQvMuo6_0gX5XykvP33HNtZfYiGRVdRCr9yt4o=" alt="Preview 3" />
        <div class="pc-label">Heritage Palace Stay • Rajasthan</div>
      </div>
    </div>
  </div>
</section>

<!-- ========================= CATEGORIES ========================= -->
<section class="container categories-section">
  <h2 class="section-title">Browse by Category</h2>
  <div class="category-grid">
    <% const categories = [
      {icon: "fa-mountain-sun", name: "Mountain Stays", subtitle: "Cold & Calm"},
      {icon: "fa-umbrella-beach", name: "Beach Resorts", subtitle: "Sun & Surf"},
      {icon: "fa-city", name: "City Hotels", subtitle: "Central & Clean"},
      {icon: "fa-fire-burner", name: "Cabins & Villas", subtitle: "Private & Cozy"}
    ] %>

    <% categories.forEach(c => { %>
      <a href="/listings?category=<%= encodeURIComponent(c.name) %>" class="category-card">
        <div class="cat-icon"><i class="fa-solid <%= c.icon %>"></i></div>
        <div class="cat-text">
          <h5><%= c.name %></h5>
          <small><%= c.subtitle %></small>
        </div>
      </a>
    <% }) %>
  </div>
</section>

<!-- ========================= FEATURED DESTINATIONS ========================= -->
<section class="container popular-section">
  <h2 class="section-title">Popular Destinations</h2>
  <div class="row g-3 mt-3">
    <% const destinations = [
      { title: "Goa", info: "Beach • Nightlife • Adventure", img: "https://images.unsplash.com/photo-1587474260584-136574528ed5?w=1200&q=60" },
      { title: "Manali", info: "Mountains • Snow • Nature", img: "https://images.unsplash.com/photo-1705593412987-f7322bffae98?w=1200&q=60" },
      { title: "Rajasthan", info: "Culture • Palaces • Heritage", img: "https://images.unsplash.com/photo-1548013146-72479768bada?w=1200&q=60" }
    ] %>

    <% destinations.forEach(d => { %>
      <div class="col-lg-4 col-md-6">
        <article class="destination-card">
          <figure class="dest-figure">
            <img loading="lazy" src="<%= d.img %>" alt="<%= d.title %>" />
            <div class="dest-badge">Top pick</div>
          </figure>
          <div class="dest-body">
            <h3><%= d.title %></h3>
            <p class="muted"><%= d.info %></p>
            <a href="/listings?dest=<%= encodeURIComponent(d.title) %>" class="link">View stays →</a>
          </div>
        </article>
      </div>
    <% }) %>
  </div>
</section>

<!-- ========================= FEATURED LISTINGS STRIP ========================= -->
<section class="container featured-strip mt-5">
  <h2 class="section-title">Featured Listings</h2>
  <div class="strip-scroll">
    <% const featured = [
      {title: "Cozy Sea View Villa", price: 4200, img: "https://media.istockphoto.com/id/621385018/photo/3d-rendering-luxury-villa-bedroom-near-beach.jpg?s=612x612&w=0&k=20&c=1RQmFgPc65PV0PMsao3_WaMOYLjklaqFwupcXbzQFdc="},
      {title: "Mountain Cabin Retreat", price: 2600, img: "https://media.istockphoto.com/id/108219206/photo/log-cabin-hidden-in-the-trees-by-the-lake-ohara-in-canada.jpg?s=612x612&w=0&k=20&c=3rt_fpgh6Be9f2M4GLoGDSteHA4BuEIV9fTiShPJWoM="},
      {title: "Elegant City Apartment", price: 3500, img: "https://media.istockphoto.com/id/1393537665/photo/modern-townhouse-design.jpg?s=612x612&w=0&k=20&c=vgQesOXDRzz0UfOZxmUtE-rFe75YgA9GvkKS8eeeumE="},
      {title: "Heritage Palace Room", price: 7200, img: "https://media.istockphoto.com/id/2176037736/photo/architectural-night-scenery-of-jiaxiu-building-in-guiyang-guizhou-china.jpg?s=612x612&w=0&k=20&c=ilaEVSQvMuo6_0gX5XykvP33HNtZfYiGRVdRCr9yt4o="}
    ] %>

    <% featured.forEach(f => { %>
      <div class="feature-card">
        <img src="<%= f.img %>" alt="<%= f.title %>" loading="lazy" />
        <div class="feature-meta">
          <div class="ft-title"><%= f.title %></div>
          <div class="ft-price">₹<%= Number(f.price).toLocaleString('en-IN') %> / night</div>
        </div>
      </div>
    <% }) %>
  </div>
</section>

<!-- ========================= CTA ========================= -->
<section class="container cta-premium mt-5 mb-5">
  <div class="cta-inner">
    <div>
      <h3>Ready for your next trip?</h3>
      <p class="muted">Find verified hosts, secure payments and 24/7 support.</p>
    </div>
    <div>
      <a href="/listings" class="btn btn-cta">Explore listings</a>
      <a href="/become-owner" class="btn btn-outline-cta">Become a host</a>
    </div>
  </div>
</section>

<!-- ========================= STYLES (scoped to page) ========================= -->
<style>
/* ================= ROOT VARIABLES ================= */
:root{
  --accent:#ffb020;
  --accent-2:#ff7a59;
  --muted:#6b7280;
  --card-bg:#ffffff;
  --glass:rgba(255,255,255,0.6);
  --heading-dark:#222428;
  --input-dark:#141414;
}

/* ================= CONTAINER ================= */
.container{
  max-width:1150px;
}

/* ================= HERO ================= */
.hero-section{
  position:relative;
  margin:24px 0;
  border-radius:14px;
  padding:34px 0 14px;
  overflow-x:hidden;
}

.hero-gradient{
  position:absolute;
  inset:0;
  background:linear-gradient(
    135deg,
    rgba(18,52,86,0.85) 0%,
    rgba(36,58,86,0.6) 45%,
    rgba(255,115,85,0.08) 100%
  );
  border-radius:12px;
  transform:skewY(-1deg) scale(1.02);
  z-index:0;
}

.hero-inner{
  position:relative;
  display:flex;
  gap:24px;
  align-items:center;
  z-index:2;
}

.hero-left{
  flex:1;
  color:#fff;
  padding:28px 18px;
}

.hero-left h1{
  font-size:2.6rem;
  line-height:1.05;
  font-weight:800;
  margin-bottom:10px;
}

.hero-left h1 span{
  color:var(--accent);
  background:linear-gradient(90deg,rgba(255,176,32,.14),rgba(255,122,89,.08));
  padding:4px 8px;
  border-radius:8px;
}

.lead{
  color:rgba(255,255,255,.9);
  margin-bottom:18px;
  font-size:1.05rem;
}

/* ================= SEARCH ================= */
.hero-search{
  display:flex;
  gap:10px;
  flex-wrap:wrap;
  max-width:920px;
}

.hero-search input{
  background:rgba(255,255,255,.95);
  border:none;
  border-radius:10px;
  padding:12px 14px;
  box-shadow:0 8px 20px rgba(2,6,23,.18);
  outline:none;
  color:var(--input-dark);
}

.hero-search input::placeholder{
  color:#5a5a5a;
}

.hero-search input[type="search"]{
  min-width:200px;
}

.hero-search input.flatpickr{
  min-width:150px;
}

.hero-search button{
  padding:12px 20px;
  border-radius:999px;
  background:var(--accent);
  border:none;
  font-weight:700;
  color:#111;
  box-shadow:0 8px 24px rgba(255,176,32,.18);
}

/* ================= HERO STATS ================= */
.hero-stats{
  display:flex;
  gap:22px;
  margin-top:18px;
}

.hero-stats strong{
  display:block;
  font-weight:800;
}

/* ================= HERO PREVIEW ================= */
.hero-right{
  width:420px;
  display:flex;
  gap:14px;
  justify-content:flex-end;
  padding-right:10px;
  scrollbar-width:none;
}

.hero-right::-webkit-scrollbar{
  display:none;
}

.preview-card{
  width:210px;
  border-radius:14px;
  overflow:hidden;
  box-shadow:0 26px 60px rgba(7,12,34,.45);
  transition:.45s cubic-bezier(.2,.9,.2,1);
}

.preview-card img{
  width:100%;
  height:160px;
  object-fit:cover;
}

.pc-label{
  position:absolute;
  left:10px;
  bottom:10px;
  background:rgba(0,0,0,.6);
  padding:6px 10px;
  border-radius:8px;
  font-size:.85rem;
  font-weight:700;
  color:#fff;
}

.card-1{transform:translateY(-20px) rotate(-4deg);}
.card-2{transform:translateY(0) rotate(2deg); margin-left:-70px;}
.card-3{transform:translateY(18px) rotate(-2deg); margin-left:-140px;}

.preview-card:hover{
  transform:scale(1.02) translateY(-8px);
}

/* ================= SECTION TITLES ================= */
.section-title{
  font-weight:800;
  color:var(--heading-dark);
  margin-bottom:12px;
}

/* ================= CATEGORIES ================= */
.category-grid{
  display:grid;
  grid-template-columns:repeat(4,1fr);
  gap:18px;
}

.category-card{
  display:flex;
  gap:12px;
  padding:18px;
  border-radius:12px;
  background:var(--card-bg);
  text-decoration:none;
  color:#0b1220;
  box-shadow:0 10px 26px rgba(13,20,40,.06);
  transition:.28s;
}

.category-card:hover{
  transform:translateY(-8px);
}

.category-card:active{
  transform:scale(.97);
}

.cat-icon i{
  width:48px;
  height:48px;
  display:flex;
  align-items:center;
  justify-content:center;
  border-radius:10px;
  font-size:26px;
  color:var(--accent);
}

/* ================= DESTINATIONS ================= */
.destination-card{
  border-radius:12px;
  overflow:hidden;
  background:var(--card-bg);
  box-shadow:0 8px 32px rgba(3,12,30,.06);
  transition:.3s;
}

.destination-card:hover{
  transform:translateY(-10px);
}

.dest-figure{
  height:220px;
}

.dest-figure img{
  width:100%;
  height:100%;
  object-fit:cover;
}

.dest-badge{
  position:absolute;
  top:12px;
  left:12px;
  background:linear-gradient(90deg,var(--accent),var(--accent-2));
  padding:6px 10px;
  border-radius:10px;
  font-size:.8rem;
  font-weight:700;
}

.dest-body{
  padding:14px;
}

/* ================= FEATURED STRIP ================= */
.strip-scroll{
  display:flex;
  gap:14px;
  overflow-x:auto;
  scroll-snap-type:x mandatory;
  -webkit-overflow-scrolling:touch;
}

.feature-card{
  min-width:260px;
  scroll-snap-align:start;
  border-radius:12px;
  overflow:hidden;
  background:var(--card-bg);
  box-shadow:0 18px 40px rgba(3,12,30,.06);
}

.feature-card img{
  width:100%;
  height:160px;
  object-fit:cover;
}

.feature-meta{
  padding:10px 12px;
  display:flex;
  justify-content:space-between;
}

/* ================= CTA ================= */
.cta-premium{
  background:#fff;
  padding:22px;
  border-radius:12px;
  border:1px solid rgba(32,33,36,.06);
  box-shadow:0 10px 28px rgba(12,16,22,.06);
}

.cta-inner{
  display:flex;
  justify-content:space-between;
  align-items:center;
  gap:18px;
}

.btn-cta{
  background:linear-gradient(90deg,var(--accent),var(--accent-2));
  padding:12px 20px;
  border-radius:999px;
  font-weight:800;
  border:none;
}

/* ================= RESPONSIVE ================= */
@media(max-width:992px){
  .hero-inner{flex-direction:column;}
  .hero-search{flex-direction:column;}
  .category-grid{grid-template-columns:repeat(2,1fr);}
}

@media(max-width:768px){
  .hero-right{
    width:100%;
    overflow-x:auto;
    justify-content:flex-start;
  }
  .preview-card{
    min-width:220px;
    transform:none !important;
    margin:0 !important;
  }
  .cta-inner{
    flex-direction:column;
    align-items:stretch;
  }
}

@media(max-width:600px){
  .hero-left h1{font-size:1.7rem;}
  .category-grid{grid-template-columns:1fr;}
}

@media(max-width:420px){
  .hero-stats{
    flex-direction:column;
    gap:10px;
  }
}
</style>


<!-- ========================= SCRIPTS ========================= -->
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script>
  document.querySelectorAll('.flatpickr').forEach(i=>{
    flatpickr(i, { dateFormat: "Y-m-d", minDate: "today", allowInput:true });
  });

  // strip auto-scroll small enhancement
  const strip = document.querySelector('.strip-scroll');
  if(strip){
    strip.addEventListener('wheel', (e)=>{
      if(e.deltaY !== 0) { strip.scrollLeft += e.deltaY; e.preventDefault(); }
    }, { passive:false });
  }
</script>
