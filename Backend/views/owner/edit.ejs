<%- layout("layouts/boilerplate") %>

<div class="container mt-5">
  <h2>Edit Listing</h2>

  <form action="/owner/<%= listing._id %>?_method=PUT" method="POST">

    <div class="mb-3">
      <label class="form-label">Title</label>
      <input class="form-control" name="listing[title]" value="<%= listing.title %>">
    </div>

    <div class="mb-3">
      <label class="form-label">Location</label>
      <input class="form-control" name="listing[location]" value="<%= listing.location %>">
    </div>

    <div class="mb-3">
      <label class="form-label">Country</label>
      <input class="form-control" name="listing[country]" value="<%= listing.country %>">
    </div>

    <div class="mb-3">
      <label class="form-label">Price</label>
      <input type="number" class="form-control" name="listing[price]" value="<%= listing.price %>">
    </div>

    <div class="mb-3">
      <label class="form-label">Image URL</label>
      <input class="form-control" name="listing[image][url]" value="<%= listing.image.url %>">
    </div>

    <div class="mb-3">
      <label class="form-label">Description</label>
      <textarea class="form-control" name="listing[description]"><%= listing.description %></textarea>
    </div>

    <button class="btn btn-dark">Update Listing</button>
  </form>
</div>
