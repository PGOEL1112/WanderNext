<% layout('layouts/boilerplate') %>
<div class="container mt-4">

  <h1 class="page-title">Owner Dashboard</h1>

  <a href="/owner/new" class="btn btn-create btn-custom mb-3">+ Create New Listing</a>

  <h3 class="section-title">Your Listings</h3>

  <div class="row mt-3">

    <% if(myListings.length === 0) { %>
      <p class="text-muted mt-2">No listings created yet.</p>
    <% } %>

    <% myListings.forEach(list => { %>
      <div class="col-md-4">
        <div class="card listing-card mb-3 shadow-sm">
          <div class="card-body">
            <h5 class="card-title"><%= list.title %></h5>
            <p><%= list.location %></p>

            <a href="/owner/<%= list._id %>/edit" class="btn btn-primary btn-sm">Edit</a>

            <form action="/owner/<%= list._id %>?_method=DELETE" method="POST" style="display:inline;">
              <button class="btn btn-danger btn-sm">Delete</button>
            </form>

          </div>
        </div>
      </div>
    <% }) %>

  </div>
</div>
