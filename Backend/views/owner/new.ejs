<% layout('layouts/boilerplate') %>

<div class="container mt-4">
  <h2>Create New Listing</h2>

  <form action="/listings/new" method="POST" class="mt-3">

    <div class="mb-3">
      <label class="form-label">Title</label>
      <input type="text" name="listing[title]" class="form-control" required>
    </div>

    <div class="mb-3">
      <label class="form-label">Location</label>
      <input type="text" name="listing[location]" class="form-control" required>
    </div>

    <div class="mb-3">
      <label class="form-label">Description</label>
      <textarea name="listing[description]" class="form-control"></textarea>
    </div>

    <button class="btn btn-success">Create Listing</button>
  </form>

</div>
