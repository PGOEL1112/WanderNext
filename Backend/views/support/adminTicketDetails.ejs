<%- layout("layouts/boilerplate") %>

<style>
  .ticket-header {
    background: linear-gradient(135deg, #1e3a8a, #3b82f6);
    color: white;
    padding: 35px;
    border-radius: 22px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.15);
    text-align: center;
    margin-bottom: 20px;
  }
  .ticket-header h2 {
    font-weight: 800;
    font-size: 1.9rem;
  }

  .ticket-box {
    max-width: 850px;
    margin: 0 auto 40px;
    background: rgba(255,255,255,0.95);
    padding: 35px;
    border-radius: 22px;
    box-shadow: 0 15px 40px rgba(0,0,0,0.12);
    backdrop-filter: blur(12px);
  }

  .ticket-section-title {
    font-weight: 700;
    color: #1e293b;
    margin-top: 20px;
    margin-bottom: 8px;
  }

  .status-badge {
    display: inline-block;
    padding: 6px 14px;
    border-radius: 10px;
    font-weight: 700;
    font-size: .85rem;
  }

  .status-open { background: #fee2e2; color:#dc2626; }
  .status-pending { background: #fef3c7; color:#d97706; }
  .status-in-progress { background:#dbeafe; color:#1e40af; }
  .status-resolved { background: #dcfce7; color:#15803d; }
  .status-closed { background: #e5e7eb; color:#374151; }

  .custom-select, textarea {
    border-radius: 12px !important;
    padding: 10px 14px !important;
    border: 1px solid #cbd5e1 !important;
    transition: .3s;
    font-weight: 600;
  }
  .custom-select:focus, textarea:focus {
    border-color: #3b82f6 !important;
    box-shadow: 0 0 0 3px rgba(59,130,246,0.25);
  }

  .primary-btn {
    background: #1e3a8a;
    color: white;
    padding: 12px;
    border-radius: 12px;
    font-weight: 700;
    width: 100%;
    border: none;
    transition: 0.3s;
  }
  .primary-btn:hover {
    background: #172554;
  }

  .reply-btn {
    background: #111827;
    color:white;
    padding: 12px;
    border-radius: 12px;
    width: 100%;
    font-weight: 700;
    border: none;
  }
  .reply-btn:hover {
    background: #0f172a;
  }

  .chat-btn {
    background: #16a34a;
    color:white;
    padding: 12px;
    border-radius: 12px;
    width: 100%;
    font-weight: 700;
    border: none;
    margin-top: 20px;
  }
  .chat-btn:hover {
    background: #15803d;
  }

  .back-btn {
    margin-top: 1.5rem;
    background: #111827;
    color: white !important;
    padding: 10px 18px;
    font-size: 0.95rem;
    border-radius: 12px;
    font-weight: 700;
    transition: 0.25s ease;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
  }
  .back-btn:hover {
    background: #1f2937;
    transform: translateY(-2px);
  }

  .chat-type-badge {
    display:inline-block;
    padding:4px 10px;
    border-radius:999px;
    font-size:0.8rem;
    background:#eef2ff;
    color:#3730a3;
    font-weight:700;
  }
</style>

<!-- HEADER -->
<div class="ticket-header">
  <h2><i class="fa-solid fa-headset me-2"></i>Support Ticket Details</h2>
</div>

<div class="ticket-box">
  <p>
    <span class="chat-type-badge">
      <%= ticket.chatType === 'ticket'
        ? 'Normal Ticket'
        : ('Direct ' + ticket.chatType.replace('-', ' ↔ ').toUpperCase()) %>
    </span>
  </p>

  <!-- USER INFO -->
  <h5 class="ticket-section-title">Initiator</h5>
  <% if (ticket.user) { %>
    <p><b>User:</b> @<%= ticket.user.username %> — <%= ticket.user.email %></p>
  <% } else { %>
    <p>Unknown</p>
  <% } %>

  <!-- PARTICIPANTS -->
  <% if (ticket.participants && ticket.participants.user && ticket.participants.other) { %>
    <h5 class="ticket-section-title">Participants</h5>
    <p>
      @<%= ticket.participants.user.username %> (<%= ticket.participants.user.role %>)
      ↔
      @<%= ticket.participants.other.username %> (<%= ticket.participants.other.role %>)
    </p>
  <% } %>

  <!-- ISSUE TYPE -->
  <h5 class="ticket-section-title">Issue Type</h5>
  <p><%= ticket.issueType %></p>

  <!-- MESSAGE -->
  <h5 class="ticket-section-title">Message</h5>
  <div class="p-3 rounded" style="background:#f8fafc; border:1px solid #e2e8f0;">
    <%= ticket.message %>
  </div>

  <!-- STATUS -->
  <h5 class="ticket-section-title">Current Status</h5>

  <span class="status-badge 
    <%= ticket.status === 'open' ? 'status-open' :
        ticket.status === 'pending' ? 'status-pending' :
        ticket.status === 'in-progress' ? 'status-in-progress' :
        ticket.status === 'resolved' ? 'status-resolved' :
        'status-closed' %>">
    <%= ticket.status.toUpperCase() %>
  </span>

  <!-- STATUS UPDATE FORM -->
  <form class="mt-3" method="POST" action="/admin/support/<%= ticket._id %>/status">
    <select class="form-control custom-select" name="status">
      <option value="open" <%= ticket.status==="open" ? 'selected' : '' %>>Open</option>
      <option value="pending" <%= ticket.status==="pending" ? 'selected' : '' %>>Pending</option>
      <option value="in-progress" <%= ticket.status==="in-progress" ? 'selected' : '' %>>In Progress</option>
      <option value="resolved" <%= ticket.status==="resolved" ? 'selected' : '' %>>Resolved</option>
      <option value="closed" <%= ticket.status==="closed" ? 'selected' : '' %>>Closed</option>
    </select>

    <button class="primary-btn mt-3">
      <i class="fa-solid fa-rotate me-1"></i> Update Status
    </button>
  </form>

  <!-- REPLY SECTION (Mainly for normal tickets) -->
  <hr class="my-4">

  <h5 class="ticket-section-title">Admin Reply (Optional)</h5>

  <form method="POST" action="/admin/support/<%= ticket._id %>/reply">
    <textarea name="reply" rows="4" class="form-control" placeholder="Type your message..."><%= ticket.adminReply %></textarea>

    <button class="reply-btn mt-3">
      <i class="fa-solid fa-paper-plane me-1"></i> Send Reply
    </button>
  </form>

  <!-- START CHAT -->
  <a href="/admin/support/<%= ticket._id %>/chat" class="chat-btn">
    <i class="fa-solid fa-comments me-1"></i> Open Live Chat
  </a>

  <a href="/admin/support" class="back-btn">
    <i class="fa-solid fa-arrow-left me-1"></i> Back to Support Dashboard
  </a>
</div>
