<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>WanderNext</title>

  <!-- Bootstrap CSS -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />

  <!-- Font Awesome -->
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
  />

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <header class="navbar">
    <h1 class="logo">
      <a href="/listings"><i class="fa-solid fa-compass"></i>WanderNext</a>
    </h1>

    <!-- Hamburger Icon -->
    <div class="menu-toggle" id="mobile-menu">
      <span class="bar"></span>
      <span class="bar"></span>
      <span class="bar"></span>
    </div>

    <!-- Navigation Links -->
    <nav class="nav-links">
      <a href="/" class="btn btn-sm btn-outline-light ms-3">Home</a>
      <a href="/listings/new" class="btn btn-sm btn-outline-light ms-3">Add Listing</a>
      
      <% if (!currentUser) { %>
      <a href="/login" class="btn btn-sm btn-outline-light ms-3">Login</a>
      <a href="/register" class="btn btn-sm btn-warning text-dark ms-2">Register</a>

      <% } else { %>

      <!-- Show User Name -->
      <span class="btn btn-sm text-light ms-3">
        <i class="fa-solid fa-user"></i> <%= currentUser.username %>
      </span>

      <!-- Logout Button triggers modal -->
      <button class="btn btn-sm btn-danger ms-3" data-bs-toggle="modal" data-bs-target="#logoutModal">
        Logout
      </button>

      <% } %>
    </nav>
  </header>

  <!-- ✅ Flash Messages -->
<div class="container mt-3">
  <% if (success && success.length > 0) { %>
    <% success.forEach(msg => { %>
      <div class="alert alert-success alert-dismissible fade show flash-msg" role="alert">
        <i class="fa-solid fa-circle-check"></i> <%= msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% }) %>
  <% } %>

  <% if (error && error.length > 0) { %>
    <% error.forEach(msg => { %>
      <div class="alert alert-danger alert-dismissible fade show flash-msg" role="alert">
        <i class="fa-solid fa-triangle-exclamation"></i> <%= msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% }) %>
  <% } %>
  
</div>


  <main class="container">
    <%- body %>
  </main>

  <footer class="footer">
    <div class="footer-content">
      <div class="footer-section about">
        <h3><i class="fa-solid fa-compass"></i> WanderNext</h3>
        <p>Explore destinations, find unique stays, and experience travel like never before. WanderNext — your journey begins here.</p>
      </div>

      <div class="footer-section social">
        <h4>Connect</h4>
        <div class="social-icons">
          <a href="#"><i class="fab fa-instagram"></i></a>
          <a href="#"><i class="fab fa-facebook"></i></a>
          <a href="#"><i class="fab fa-twitter"></i></a>
          <a href="#"><i class="fab fa-linkedin"></i></a>
        </div>
      </div>
    </div>

    <div class="footer-bottom">
      <div class="legal-links">
        <a href="#">Privacy Policy</a>
        <span>|</span>
        <a href="#">Terms & Conditions</a>
      </div>
      <p>© 2025 WanderNext | Built with ❤️ by Priyanshu</p>
    </div>
  </footer>

  <!-- Logout Confirmation Modal -->
<div class="modal fade" id="logoutModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title">Confirm Logout</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>

      <div class="modal-body">
        Are you sure you want to logout?
      </div>

      <div class="modal-footer">
        <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <a href="/logout" class="btn btn-danger">Logout</a>
      </div>

    </div>
  </div>
</div>


  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Responsive Navbar + Auto-Fade Flash Script -->
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const menu = document.getElementById("mobile-menu");
      const navLinks = document.querySelector(".nav-links");

      menu.addEventListener("click", () => {
        menu.classList.toggle("active");
        navLinks.classList.toggle("active");
      });

      // Auto-hide flash messages
      const flashMessages = document.querySelectorAll(".flash-msg");
      flashMessages.forEach((msg) => {
        setTimeout(() => {
          msg.classList.add("fade-out");
          setTimeout(() => msg.remove(), 600);
        }, 3000);
      });
    });

    function togglePassword() {
      let password = document.getElementById("password");
      password.type = password.type === "password" ? "text" : "password";
    }

    function toggleRegPassword() {
      let password = document.getElementById("regpassword");
      password.type = password.type === "password" ? "text" : "password";
    }
  </script>

  <script src="/Js/script.js"></script>
</body>
</html>
